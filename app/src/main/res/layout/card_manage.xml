<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/report_img"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:scaleType="fitCenter"
                tools:srcCompat="@tools:sample/backgrounds/scenic[5]" />

            <TextView
                android:id="@+id/report_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="30sp"
                app:fontFamily="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/report_user"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Author"
                    android:textSize="18sp"
                    app:fontFamily="serif" />

                <TextView
                    android:id="@+id/report_tname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Theme"
                    android:textColor="#8E50FB"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:fontFamily="serif" />

                <TextView
                    android:id="@+id/report_tag"
                    android:layout_width="204dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Tags"
                    android:textSize="18sp"
                    app:fontFamily="serif" />
            </LinearLayout>

            <TextView
                android:id="@+id/report_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="18sp"
                app:fontFamily="serif" />

            <TextView
                android:id="@+id/report_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time and date"
                android:textSize="18sp"
                app:fontFamily="serif" />

            <TextView
                android:id="@+id/report_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="18sp"
                app:fontFamily="serif" />
            <!--
                        <Button
                            android:id="@+id/delete_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delete Current Report"
                            android:background="@color/deleteButton"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />  -->
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>